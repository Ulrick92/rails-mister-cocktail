<h1>Cocktails list</h1>

<div class="row">
   <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4 col-md-2"><%= link_to cocktail.name, cocktail_path(cocktail) %></div>
   <% end %>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-12"><%= link_to "Add a cocktail", new_cocktail_path %></div>
</div>
