<h1><%= @cocktail.name %></h1>
<div class="row">
  <% @cocktail.doses.each do |dose| %>
    <%= dose.ingredient.name %>
    <%= dose.description%> (<%= dose.amount%>cl)
  <% end %>
</div>
<div class="row">
  <div class="col-sm-12"><%= link_to "Back to Cocktails", cocktails_path %> | <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></div>
</div>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :amount %>
  <%= f.association :ingredient %>
  <%= f.input :description %>
  <%= f.button :submit %>
<% end %>
